@model ReviewsSites.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/CatDetails.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Norican|Raleway" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" initial-scale=1.0 />
    <title>Beerds Categories</title>
</head>

<body>
    <header>
        <i id="mug" class="fas fa-beer"></i>
        <a href="/Beer/Index">All Beers</a>
        <a href="#about">About</a>
        <a href="#contact">Contact</a>
    </header>
    <div class="Category">
     <img src="@Model.ImgPath" style="height: 50vh; width: auto"/>
    </div>
    <div class="MainPage">
        <p class="MainPageText">
            @Model.DetailDescription
        </p>
        <div id="mainList">
            <ul>
                @foreach (var beer in Model.Beers)

                 {

                    <li><a href="/Beer/Details/@beer.BeerId">@beer.Name<br /><img src="@beer.ImgPath" style="height: 40vh; width: auto;" /></a></li>
                 }
            </ul>
        </div>

    </div>
    <div class="sidenav">
        <i id="mug" class="fas fa-beer"></i>
        <p>Welcome to Beerds! The premiere hub of beer reviews! Choose from our list of beers to give it a rating or to learn more.</p>
        <div class="NavLinks">
            <a href="/Beer/Index">All Beers</a>
            <hr />
            <div class="ContactInfo">
                <a href="#about">About</a>             
                <a href="#contact">Contact</a>
            </div>
        </div>
    </div>
    <footer>
        &copy;2019&nbsp;&nbsp;Team 3D
    </footer>
</body>


</html>
