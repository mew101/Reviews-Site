@model IEnumerable<ReviewsSites.Models.Beer>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/CatDetails.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Norican|Raleway" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" initial-scale=1.0 />
    <title>List of our Beers we Review</title>
</head>
<body>
    <header>
        <a href="/Category/Index"><i id="mug" class="fas fa-beer"></i></a>
        <a href="/Beer/Index">All Beers</a>
        <a href="#about">About</a>
        <a href="#contact">Contact</a>
    </header>     
    <div id="mainList">
        <ul>
            @foreach (var Beer in Model)
            {
                <li><a href="/Beer/Details/@Beer.BeerId">@Beer.Name</a><br /><img src="@Beer.ImgPath" /></li>
            }
        </ul>
    </div>
    <div class="sidenav">
        <a href="/Category/Index"><i id="mug" class="fas fa-beer"></i></a>
        <p>Welcome to Beerds! The premiere hub of beer reviews! Choose from our list of beers to give it a rating or to learn more.</p>
        <div class="NavLinks">
            <a href="/Beer/Index">All Beers</a>
            <hr />
            <div class="ContactInfo">
                <a href="#about">About</a>
                <a href="#contact">Contact</a>
            </div>
        </div>
    </div>
    <footer>
        &copy;2019&nbsp;&nbsp;Team 3D
    </footer>
</body>
</html>
